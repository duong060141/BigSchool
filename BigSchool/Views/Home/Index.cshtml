@model IEnumerable<BigSchool.Models.Course>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <link href="~/Content/Site.css" rel="stylesheet" />
</div>
<div class="row">
    <ul class="couse">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                    @course.DateTime.ToString("dd")
                     </div>
                </div>
              <div class="details">
                  <span class="lecture">
                      @course.Name
                  </span>
                  <span class="category">
                      @course.Category.Name
                  </span>
              </div>
            </li>
        }
    </ul>
</div>
<style>
    .navbar-inverse {
        background-color: #d41d50;
        border-color: #fbf6f6;
    }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
        }

        .navbar-inverse .navbar-brand {
            color: white;
        }

    .couse{
        list-style:none;
    }
    .couse > li{
        position:relative;
        margin-bottom:30px;
    }
        .couse > li .date {
            text-align: center;
            background-color: #d41d50;
            color:white;
            width:60px;
            border-radius:8px;
        }
        .couse > li .details{
            position:absolute;
            top:0;
            left:70px;
        }

        .couse > li .lecture{

        }
        .couse > li .category{

        }
        .couse > li .acticon{
            display:none;
            left:70px;
            position:absolute;
        }

        .couse > li:hover .acticon{
            display:block;
        }
</style>


